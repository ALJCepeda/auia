{
  "name": "auia",
  "author": "Alfred J Cepeda",
  "license": "ISC",
  "version": "1.0.0",
  "description": "Machine Provisioner built on Ansible",
  "bin": {
    "auia": "bin/auia"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "./bin/auia",
    "dev": "node $NODE_DEBUG_OPTION ./node_modules/.bin/ts-node src/index.ts src/tests/config.yaml",
    "dev:watch": "nodemon --exec npm run dev",
    "test": "node $NODE_DEBUG_OPTION ./node_modules/.bin/ts-mocha -p tsconfig.json **/*.specs.*",
    "test:watch": "nodemon --exec npm run test",
    "db": "sqlite3 ./.auia/auia.db"
  },
  "dependencies": {
    "@types/core-js": "^2.5.0",
    "@types/es6-shim": "^0.31.39",
    "@types/js-yaml": "^3.12.0",
    "@types/node": "^10.12.18",
    "@types/rimraf": "^2.0.2",
    "@types/sinon": "^7.0.10",
    "ajv": "^6.9.1",
    "js-yaml": "^3.13.1",
    "rimraf": "^2.6.3",
    "sqlite3": "^4.0.8",
    "typeorm": "^0.2.25",
    "write-yaml": "^1.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.2.7",
    "ts-mocha": "^2.0.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  }
}
